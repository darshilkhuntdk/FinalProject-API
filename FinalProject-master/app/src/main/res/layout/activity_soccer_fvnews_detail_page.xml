<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cst2335.finalproject.SoccerFavouriteNewsDetailPage">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/sc_fav_detail_tb"
        android:layout_width="match_parent"
        android:background="@color/design_default_color_primary"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/dh_fav_news_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="20dp"/>
    <ImageView
        android:id="@+id/dh_fav_detail_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/dh_fav_detail_link_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/purple_200"
        android:text="@string/link"/>
    <TextView
        android:id="@+id/dh_fav_detail_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        />
    <TextView
        android:id="@+id/dh_fav_detail_date_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/purple_200"
        android:text="@string/date"/>
    <TextView
        android:id="@+id/dh_fav_detail_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/dh_fav_detail_desc_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/purple_200"
        android:text="@string/description"/>
    <TextView
        android:id="@+id/dh_fav_detail_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <Button
        android:id="@+id/dh_remove_fav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/removeFromFav"/>
    <Button
        android:id="@+id/dh_fav_open_browser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/openInBrowser"/>
</LinearLayout>