<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cst2335.finalproject.SoccerFavNewsDetailFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dh_favDetailFragment_news_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="20dp"/>
        <ImageView
            android:id="@+id/dh_favDetailFragment_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            />
        <TextView
            android:id="@+id/dh_favDetailFragment_link_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/purple_200"
            android:text="@string/link"/>
        <TextView
            android:id="@+id/dh_favDetailFragment_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            />
        <TextView
            android:id="@+id/dh_favDetailFragment_date_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/purple_200"
            android:text="@string/date"/>

        <TextView
            android:id="@+id/dh_favDetailFragment_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/dh_favDetailFragment_desc_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/purple_200"
            android:text="@string/description"/>
        <TextView
            android:id="@+id/dh_favDetailFragment_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <Button
            android:id="@+id/dh_favDetailFragment_remove_fav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/removeFromFav"/>
        <Button
            android:id="@+id/dh_favDetailFragment_open_browser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/openInBrowser"/>
        <Button
            android:id="@+id/dh_favDetailFragment_hide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hide"/>

    </LinearLayout>

</FrameLayout>